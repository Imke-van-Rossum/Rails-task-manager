<h1>Tasks</h1>

<p><%= link_to 'Create new Task', 'tasks/new' %></p>

<ul>
  <% @tasks.each do |task| %>
    <li>
    <% if task.completed %>
    <i class="far fa-check-square"></i>
    <% else %>
    <i class="far fa-square"></i>
    <% end %>
    <%= link_to task.title, task_path(task) %></li>
  <% end %>
</ul>

